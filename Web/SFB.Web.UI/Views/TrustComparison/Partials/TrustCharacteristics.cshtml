@using SFB.Web.Common
@using SFB.Web.UI.Models
@model TrustCharacteristicsViewModel

@Html.Partial("Partials/Criteria/RangeCriteria",
    new BenchmarkCriteriaRangeVM(
        question: TrustCharacteristicsQuestions.NUMBER_OF_PUPILS,
        homeSchoolValue: Model[TrustCharacteristicsQuestions.NUMBER_OF_PUPILS],
        homeSchoolName: Model.BenchmarkTrust.Name,
        elementName: "NoPupil",
        minValue: Model.BenchmarkCriteria.MinNoPupil,
        maxValue: Model.BenchmarkCriteria.MaxNoPupil
        ))

@Html.Partial("Partials/Criteria/RangeCriteria",
    new BenchmarkCriteriaRangeVM(
        question: TrustCharacteristicsQuestions.NUMBER_OF_SCHOOLS,
        homeSchoolValue: Model[TrustCharacteristicsQuestions.NUMBER_OF_SCHOOLS],
        homeSchoolName: Model.BenchmarkTrust.Name,
        elementName: "NoSchools",
        minValue: Model.BenchmarkCriteria.MinNoSchools,
        maxValue: Model.BenchmarkCriteria.MaxNoSchools,
        minLimit: 2
        ))

@Html.Partial("Partials/Criteria/RangeCriteria",
    new BenchmarkCriteriaRangeVM(
        question: TrustCharacteristicsQuestions.TOTAL_INCOME,
        homeSchoolValue: Model[TrustCharacteristicsQuestions.TOTAL_INCOME],
        homeSchoolName: Model.BenchmarkTrust.Name,
        elementName: "TotalInc",
        minValue: Model.BenchmarkCriteria.MinTotalInc,
        maxValue: Model.BenchmarkCriteria.MaxTotalInc,
        maxLimit: 1000000000
        ))

@Html.Partial("Partials/Criteria/MultiplechoiceCriteria",
            new BenchmarkCriteriaMultipleChoiceVM(
                question: TrustCharacteristicsQuestions.SCHOOL_OVERALL_PHASE,
                homeSchoolValue: Model[TrustCharacteristicsQuestions.SCHOOL_OVERALL_PHASE],
                homeSchoolName: Model.BenchmarkTrust.Name,
                elementName: "SchoolOverallPhase",
                options: new List<OptionVM>
                {
                    new OptionVM("Primary", "Primary", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("Secondary", "Secondary", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("Special", "Special", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("Pupil referral unit", "Pupil referral unit", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("Alternative provision", "Alternative provision", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("All-through", "All-through", Model.BenchmarkCriteria.SchoolOverallPhase),
                    new OptionVM("Cross phase", "Cross Overall Phase", Model.BenchmarkCriteria.SchoolOverallPhase,
                    subOptions: new SubOptionsVM{
                      Name = "SchoolOverallPhaseCrossPhase",
                      SubOptions = new List<OptionVM>{
                        new OptionVM("Primary", "Primary", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                        new OptionVM("Secondary", "Secondary", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                        new OptionVM("Special", "Special", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                        new OptionVM("Pupil referral unit", "Pupil referral unit", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                        new OptionVM("Alternative provision", "Alternative provision", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                        new OptionVM("All-through", "All-through", Model.BenchmarkCriteria.SchoolOverallPhaseCrossPhase),
                    } } )
                }
                )
            )