@using SFB.Web.ApplicationCore.Helpers.Constants
@using SFB.Web.UI.Models

@model SchoolCharacteristicsViewModel

<div class="accordion-section">
        <h2>
            <a class="accordion-section-header" href="javascript:void(0)">
