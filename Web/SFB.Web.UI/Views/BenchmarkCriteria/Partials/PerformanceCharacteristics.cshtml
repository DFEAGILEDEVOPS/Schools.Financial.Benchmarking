@using SFB.Web.Common
@using SFB.Web.UI.Models
@model SchoolCharacteristicsViewModel

<div class="accordion-section">
    <fieldset role="group" aria-labelledby="PerformanceHeader">
        <legend class="hidden">Performance characteristics</legend>

        <div class="accordion-section-header">
            <h2 id="PerformanceHeader" class="heading-medium">Performance characteristics <span class="font-small"><span aria-hidden="true">(</span><span class="selection-counter">0</span> selected<span aria-hidden="true">)</span></span></h2>
        </div>

        <div class="accordion-section-body">
            <p>
                To compare schools across more performance characteristics visit the <a rel="external noopener noreferrer" class="font19-ext-link" target="_blank" href="https://www.gov.uk/school-performance-tables">school performance tables<span class="visuallyhidden"> Opens in a new window</span></a> site.
            </p>

            @Html.Partial("Partials/PercentageCriteria",
                new BenchmarkCriteriaRangeVM(
                    question: SchoolCharacteristicsQuestions.KS2_ACTUAL,
                    homeSchoolValue: Model[SchoolCharacteristicsQuestions.KS2_ACTUAL],
                    homeSchoolName: Model.BenchmarkSchool.Name,
                    elementName: "Ks2Actual",
                    minValue: Model.BenchmarkCriteria.MinKs2Actual,
                    maxValue: Model.BenchmarkCriteria.MaxKs2Actual
                    ))

            @Html.Partial("Partials/RangeCriteria",
                new BenchmarkCriteriaRangeVM(
                    question: SchoolCharacteristicsQuestions.KS2_PROGRESS,
                    homeSchoolValue: Model[SchoolCharacteristicsQuestions.KS2_PROGRESS],
                    homeSchoolName: Model.BenchmarkSchool.Name,
                    elementName: "Ks2Progress",
                    minValue: Model.BenchmarkCriteria.MinKs2Progress,
                    maxValue: Model.BenchmarkCriteria.MaxKs2Progress,
                    minLimit: -20,
                    maxLimit: 20,
                    format: "F2"
                    ))

            @Html.Partial("Partials/RangeCriteria",
                new BenchmarkCriteriaRangeVM(
                    question: SchoolCharacteristicsQuestions.AVERAGE_ATTAINMENT_8,
                    homeSchoolValue: Model[SchoolCharacteristicsQuestions.AVERAGE_ATTAINMENT_8],
                    homeSchoolName: Model.BenchmarkSchool.Name,
                    elementName: "AvAtt8",
                    minValue: Model.BenchmarkCriteria.MinAvAtt8,
                    maxValue: Model.BenchmarkCriteria.MaxAvAtt8,
                    minLimit: -0,
                    maxLimit: 100,
                    format: "F1"
                    ))

            @Html.Partial("Partials/RangeCriteria",
                new BenchmarkCriteriaRangeVM(
                    question: SchoolCharacteristicsQuestions.PROGRESS_8_MEASURE,
                    homeSchoolValue: Model[SchoolCharacteristicsQuestions.PROGRESS_8_MEASURE],
                    homeSchoolName: Model.BenchmarkSchool.Name,
                    elementName: "P8Mea",
                    minValue: Model.BenchmarkCriteria.MinP8Mea,
                    maxValue: Model.BenchmarkCriteria.MaxP8Mea,
                    minLimit: -5,
                    maxLimit: 5
                    ))

            @Html.Partial("Partials/MultipleChoiceCriteria",
                new BenchmarkCriteriaMultipleChoiceVM(
                    question: SchoolCharacteristicsQuestions.OFSTED_RATING,
                    homeSchoolValue: Model[SchoolCharacteristicsQuestions.OFSTED_RATING],
                    homeSchoolName: Model.BenchmarkSchool.Name,
                    elementName: "OfstedRating",
                    options: new List<OptionVM>
                    {
                        new OptionVM("Outstanding", "Outstanding", Model.BenchmarkCriteria.OfstedRating),
                        new OptionVM("Good", "Good", Model.BenchmarkCriteria.OfstedRating),
                        new OptionVM("Requires improvement", "Requires improvement", Model.BenchmarkCriteria.OfstedRating),
                        new OptionVM("Inadequate", "Inadequate", Model.BenchmarkCriteria.OfstedRating)
                    }
                    )
                )
        </div>
    </fieldset>
</div>