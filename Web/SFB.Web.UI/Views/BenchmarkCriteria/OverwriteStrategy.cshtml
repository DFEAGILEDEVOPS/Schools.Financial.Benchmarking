@model SFB.Web.UI.Models.BenchmarkCriteriaVM

@{
    ViewBag.Title = "Schools Financial Benchmarking";
    ViewBag.pageClass = "overwrite-strategy";
}

<h1 class="heading-xlarge page-heading">Comparing similar schools</h1>

<p>
    You already have <span class="bold">@Model.ComparisonListCount</span> schools in your benchmarking basket. You can replace them or retain them alongside those matching the characteristics you've just selected.
</p>

<form action="/BenchmarkCharts/GenerateFromAdvancedCriteria" method="post">
    <div class="form-group">
        <fieldset>
            <legend class="hidden">Overwrite strategy</legend>
            <div class="multiple-choice">
                <input id="radio-1" type="radio" name="overwriteStrategy" value="overwrite" checked="checked">
                <label class="selection-button-radio" for="radio-1">
                    Replace current basket
                </label>
            </div>
            
            <div class="multiple-choice">
            <input id="radio-2" type="radio" name="overwriteStrategy" value="add">
                <label class="selection-button-radio" for="radio-2">
                    Add to existing basket
                </label>
            </div>

        </fieldset>
    </div>
    <div class="grid-row font-xsmall">
        <div class="column-one-third">
            <div class="column-one-third next-button">
                <button type="submit" class="button">Next</button>
            </div>
            <div class="column-one-third back-button">
                <input type="submit" class="link-button"  formaction="AdvancedCharacteristics" value="Back">
            </div>
        </div>
    </div>

    <div id="criteria">

        @Html.Partial("Partials/AdvancedCriteriaHiddenFields", Model.AdvancedCriteria)
        
        <input type="hidden" name="Urn" value="@ViewBag.URN">
        <input type="hidden" name="ComparisonType" value="@ViewBag.ComparisonType">
        <input type="hidden" name="EstType" value="@ViewBag.EstType">
        <input type="hidden" name="AreaType" value="@ViewBag.AreaType">
        <input type="hidden" name="LaCode" value="@ViewBag.LaCode">

    </div>
</form>