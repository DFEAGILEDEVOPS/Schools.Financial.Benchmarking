@using SFB.Web.UI.Helpers.Enums
@using SFB.Web.UI.Helpers.Constants
@model SFB.Web.UI.Models.LocationListViewModel

@{
    ViewBag.Title = "Location search for \"" + Model.LocationOrPostcode + "\"";
    ViewBag.pageClass = "search-results";
}

@section BMListBannerContent
{
    @Html.Partial("Partials/BenchmarkListBanner")
}

@section BackButtonContent{

    @Html.Partial("Partials/BackToHomeLink")
}

<h1 class="govuk-heading-xl page-heading">Location search for "@Model.LocationOrPostcode"</h1>

<div class="grid-row js-live-search-results-block">
    <div class="column-two-thirds">

        <div aria-live="assertive" class="js-search-results-info">
            <div class="result-info">
                <p class="summary" aria-live="assertive">
                    <span class="govuk-!-font-weight-bold">@(Model.ModelList.Count)</span> locations found
                </p>
            </div>
        </div>
        @if (Model.ModelList.Count > 0)
        {
            <ul>
                @foreach (var location in Model.ModelList)
                {
                    if (Model.SearchMethod == "Manual")
                    {
                        <li class="document">
                            <a href="/ManualComparison/Search?searchtype=@SearchTypes.SEARCH_BY_LOCATION&&LocationCoordinates=@location.LatLon&locationorpostcode=@location.LocationName&openOnly=@Model.OpenOnly.ToString()" class="govuk-!-font-size-19 govuk-!-font-weight-bold">@location.LocationName</a>
                        </li>
                    }
                    else if (Model.SearchMethod == "MAT")
                    {
                        <li class="document">
                            <a href="/trustsearch/Search?searchtype=@SearchTypes.SEARCH_BY_TRUST_LOCATION&&LocationCoordinates=@location.LatLon&locationorpostcode=@location.LocationName" class="govuk-!-font-size-19 govuk-!-font-weight-bold">@location.LocationName</a>
                        </li>
                    }
                    else
                    {
                        <li class="document">
                            <a href="/SchoolSearch/Search?searchtype=@SearchTypes.SEARCH_BY_LOCATION&&LocationCoordinates=@location.LatLon&locationorpostcode=@location.LocationName&openOnly=@Model.OpenOnly.ToString()" class="govuk-!-font-size-19 govuk-!-font-weight-bold">@location.LocationName</a>
                        </li>
                    }
                }
            </ul>
        }
        else
        {
            <p class="govuk-!-font-size-19 govuk-!-font-weight-bold" style="margin-top: 22px;">Please try:</p>
            <p class="indent">
                • <a href="/">searching again</a> using different spelling or words
            </p>
        }
    </div>

</div>
