<form method="get" action="/TrustSearch/Search" autocomplete="off" 
      class="tab-content tab-content--@ViewHelpers.TrustTabActive(Model.SearchType)" 
      id="TrustTabContent"
      role="tabpanel">
    <div class="govuk-form-group">
        <fieldset>
            <legend class="visuallyhidden">Select a search type option</legend>
            <div>
                <h2 class="govuk-form-group heading-small bold-small mb-1">
                    Search by:
                </h2>

                @Html.Partial("Partials/Search/TrustNameSearchOption")
                @Html.Partial("Partials/Search/TrustLocationSearchOption")
                @Html.Partial("Partials/Search/TrustLaSearchOption")
            </div>
        </fieldset>
    </div>
</form>