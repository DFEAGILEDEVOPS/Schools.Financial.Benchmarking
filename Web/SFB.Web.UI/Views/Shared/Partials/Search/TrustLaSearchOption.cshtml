@using SFB.Web.UI.Helpers.Constants
@model SFB.Web.UI.Models.SearchViewModel

<div id="TrustLaCodeNameAccordion" class="govuk-radios__item js-accordion">
    <input class="govuk-radios__input" id="TrustLaCodeName" name="option" type="radio" 
           @(Model.GetRadioButtonCheckedAttr(SearchTypes.SEARCH_BY_TRUST_LA_CODE_NAME)) 
           data-aria-controls="TrustSearchByLaCodeNameFieldset" />
    <label class="govuk-label govuk-radios__label" for="TrustLaCodeName">Local authority of schools in academy trust</label>
</div>
<div id="TrustSearchByLaCodeNameFieldset" class="govuk-radios__conditional govuk-radios__conditional--hidden">
    <div class="govuk-form-group @(Model.GetSearchTypeErrorClass(SearchTypes.SEARCH_BY_TRUST_LA_CODE_NAME))">
        <div class="govuk-hint" for="FindTrustByLaCodeName">
            <span>Enter a local authority name or a three-digit <abbr title="Local authority" aria-label="Local authority">LA</abbr> code</span>
        </div>
        <label class="govuk-visually-hidden" for="FindTrustByLaCodeName_listbox">Select a local authority from the list box</label>
        @if (Model.SearchTypeHasError(SearchTypes.SEARCH_BY_TRUST_LA_CODE_NAME))
        {
            <span class="govuk-error-message"><span class="govuk-visually-hidden">Error: </span>@Model.ErrorMessage</span>
        }
        <div>
            <input id="FindTrustByLaCodeName"
                   class="govuk-input @(Model.GetInputErrorClass(SearchTypes.SEARCH_BY_TRUST_LA_CODE_NAME))"
                   name="lacodename"
                   type="text" />
            <input type="hidden" id="SelectedLocalAuthorityIdTrust" name="SelectedLocalAuthorityId" />
            <button type="submit" class="govuk-button search-button" data-module="govuk-button" name="searchtype" value="@SearchTypes.SEARCH_BY_TRUST_LA_CODE_NAME">Search</button>
        </div>
    </div>
</div>

