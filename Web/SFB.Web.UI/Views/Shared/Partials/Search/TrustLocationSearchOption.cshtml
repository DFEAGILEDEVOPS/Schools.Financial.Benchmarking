@using SFB.Web.UI.Helpers.Constants
@model SFB.Web.UI.Models.SearchViewModel

<div id="TrustTownOrCityAccordion" class="govuk-radios__item js-accordion">
    <input class="govuk-radios__input" id="TrustTownOrCity" name="option" type="radio"
           @Html.Raw(Model.GetRadioButtonCheckedAttr(SearchTypes.SEARCH_BY_TRUST_LOCATION))
           data-aria-controls="TrustSearchByTownFieldset" />
    <label class="govuk-label govuk-radios__label" for="TrustTownOrCity">Location of schools in academy trust</label>
</div>
<div id="TrustSearchByTownFieldset" class="govuk-radios__conditional govuk-radios__conditional--hidden">
    <div class="govuk-form-group @(Model.GetSearchTypeErrorClass(SearchTypes.SEARCH_BY_TRUST_LOCATION))">
        <label class="govuk-hint" for="FindTrustByTown">
            Enter a postcode, town or street
        </label>
        <label class="govuk-visually-hidden" for="FindTrustByTown_listbox">Select a location from the list box</label>
        <div class="location-error-message-placeholder">
            @if (Model.SearchTypeHasError(SearchTypes.SEARCH_BY_TRUST_LOCATION))
            {
                <span class="govuk-error-message"><span class="govuk-visually-hidden">Error: </span>@Model.ErrorMessage</span>
            }
        </div>
        <div>
            <input id="FindTrustByTown"
                   class="govuk-input @(Model.GetInputErrorClass(SearchTypes.SEARCH_BY_TRUST_LOCATION))"
                   name="locationorpostcode"
                   placeholder=""
                   type="text" />
            <input type="hidden" id="LocationCoordinatesForTrust" name="locationCoordinates" />
            <button type="submit" class="govuk-button search-button" data-module="govuk-button" name="searchtype" value="@SearchTypes.SEARCH_BY_TRUST_LOCATION">Search</button>
        </div>
    </div>
</div>