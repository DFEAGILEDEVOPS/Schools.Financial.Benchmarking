@using SFB.Web.UI.Helpers.Constants
@using SFB.Web.UI.Models
@model SchoolComparisonListModel

@{
    ViewBag.Title = "Schools Financial Benchmarking";
    ViewBag.pageClass = "benchmark-list";
}

@section BackButtonContent{
    @Html.Partial("Partials/BreadCrumbs/BackLink")
}

<h1 class="heading-xlarge page-heading">Benchmark basket</h1>

<p>
    @if (Model.HasIncompleteFinancialData)
    {

        <div class="panel panel-border-wide orange-warning">
            <p>
                Some schools have data from a period less than 12 months
            </p>
        </div>

    }

    @if (Model.HasIncompleteWorkforceData)
    {
        <div class="panel panel-border-wide orange-warning">
            <p>
                Some schools don't have a complete set of workforce data
            </p>
        </div>
    }
</p>

<div id="benchmarkBasketControlsPlaceHolder">
    @Html.Partial("Partials/BenchmarkBasketControls")
</div>

<div id="benchmarkBasketLoadingPlaceHolder"></div>

<ul>
    @foreach (var school in Model.BenchmarkSchools)
    {
        <li class="document" id="doc_@school.Urn">
            <div class="grid-row">
                <div class="column-half">
                    @if (!school.IsReturnsComplete || !school.WorkforceDataPresent)
                    {
                        <div class="name highlight-warning">
                            <a href="/school/detail?urn=@school.Urn" class="bold-small">@school.Name<span class="visually-hidden"> (has incomplete data)</span></a>
                        </div>
                    }
                    else
                    {
                        if (school.Urn != Model.HomeSchoolUrn)
                        {
                            <div class="name">
                                <a href="/school/detail?urn=@school.Urn" class="bold-small">@school.Name<span class="visually-hidden"></span></a>
                            </div>
                        }
                        else
                        {
                            <div class="name highlight">
                                <a href="/school/detail?urn=@school.Urn" class="bold-small">@school.Name<span class="visually-hidden"> (default school)</span></a>
                            </div>
                        }
                    }
                    <ul class="metadata">
                        <li>@school.Address</li>
                        <li>@school.Phase</li>
                        <li>@school.Type</li>
                    </ul>
                </div>
                <div class="column-half make-benchmark">
                    <div class="default-benchmark column-three-quarters right-padding" data-urn="@school.Urn">
                        @DefaultButton(school)
                    </div>
                    <div class="remove-benchmark column-quarter no-padding">
                        <a class="button removefrom" href="javascript:void(0);" onclick="@( $"DfE.Views.BenchmarkListViewModel.UpdateBenchmarkBasket({school.Urn},'Remove')")"
                           aria-label="Remove @school.Name from benchmark">Remove</a>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>

@if (Model.BenchmarkSchools.Count > 1)
{
    <div class="view-button-bottom">
        <a class="button view-benchmark" href="/BenchmarkCharts"> View benchmarking charts</a>
    </div>
}

<a href="#pagetop" class="page-top hide-in-print">Top of page</a>


@helper DefaultButton(BenchmarkSchoolModel school)
{
    <a @DisplayStyle(Model.HomeSchoolUrn != school.Urn) id="btn_add_@school.Urn" class="add-remove add defaultBenchmark bold-xsmall" href="javascript:void(0);" onclick="@( $"DfE.Views.BenchmarkListViewModel.UpdateBenchmarkBasket({school.Urn},'SetDefault')")"
                                                        aria-label="Use @school.Name as default school">Use as default school</a>
    <a @DisplayStyle(Model.HomeSchoolUrn == school.Urn) id="btn_remove_@school.Urn" class="add-remove remove defaultBenchmark bold-xsmall" href="javascript:void(0);" onclick="@( $"DfE.Views.BenchmarkListViewModel.UpdateBenchmarkBasket({school.Urn},'UnsetDefault')")"
                                                        aria-label="Remove @school.Name as default school">Remove as default school</a>
}

@helper DisplayStyle(bool display)
{
    if (display)
    {
        @Html.Raw("style=\"display: inline-block\"")
    }
    else
    {
        @Html.Raw("style=\"display: none\"")
    }
}

@section ViewScripts {
    <script>
        DfE.Views.BenchmarkListViewModel.Load();
    </script>
}