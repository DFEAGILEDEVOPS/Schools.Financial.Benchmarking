@using SFB.Web.UI.Helpers.Constants
@model SFB.Web.UI.Models.TrustListViewModel

<div class="column-one-third @(Request.QueryString["searchtype"] == SearchTypes.SEARCH_BY_TRUST_LOCATION ? "trust-location-filter" : "hidden-filter")">
    <div class="filter-form">
        <details open>
            <summary class="filter-detail"><span class="summary font-xsmall">Show search filters</span></summary>
            <div class="panel panel-border-narrow filter-detail">
                @(Html.Partial("Partials/TrustFilterForm", Model))
            </div>
        </details>
    </div>
</div>

<div class="column-two-thirds">
    <div aria-live="assertive" id="js-search-results-info">
        <div class="result-info">
            <p class="summary" aria-live="assertive">
                <span class="bold">@(Model.Pagination.Total)</span> multi-academy trusts found
            </p>
        </div>
    </div>
    @if (Model.ModelList.Count > 0)
    {
        @(Html.Partial("Partials/TrustResults", Model))
    }
    else
    {
        <p class="bold-small" style="margin-top:22px;">Please try:</p>
        <p class="indent">
            •	<a href="/">searching again</a> using different spelling or words
        </p>
        <p class="indent">
            •	removing your filters
        </p>
    }
</div>