@model SFB.Web.UI.Models.TrustListViewModel

<div class="column-two-thirds">

    <div aria-live="assertive" id="js-search-results-info">
        <div class="result-info">
            <p class="summary" aria-live="assertive">
                <span class="bold">@(Model.Pagination.Total)</span> multi-academy trusts found
            </p>
        </div>
    </div>
    @if (Model.ModelList.Count > 0)
    {
        @(Html.Partial("Partials/TrustResults", Model))
    }
    else
    {
        <p class="bold-small" style="margin-top:22px;">Please try:</p>
        <p class="indent">
            •	<a href="/">searching again</a> using different spelling or words
        </p>
        <p class="indent">
            •	removing your filters
        </p>
    }
</div>