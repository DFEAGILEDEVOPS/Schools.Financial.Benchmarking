            </tr>
        }
        @if (Model.AdvancedCriteria.MinOtherLearningDiff.HasValue)
        {
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">@SchoolCharacteristicsQuestions.OTHER_LEARNING_DIFF</td>
                <td class="govuk-table__cell">@decimal.Round(Model.BenchmarkSchoolData.OtherLearningDifficulty.GetValueOrDefault(), 2, MidpointRounding.AwayFromZero)%</td>
                <td class="govuk-table__cell">@decimal.Round(Model.AdvancedCriteria.MinOtherLearningDiff.GetValueOrDefault(), 2, MidpointRounding.AwayFromZero)% - @decimal.Round(Model.AdvancedCriteria.MaxOtherLearningDiff.GetValueOrDefault(), 2, MidpointRounding.AwayFromZero)%</td>
