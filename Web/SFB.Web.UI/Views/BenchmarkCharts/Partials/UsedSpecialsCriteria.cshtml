                <td class="govuk-table__cell">@decimal.Round(Model.AdvancedCriteria.MinSocialHealth.GetValueOrDefault(), 2, MidpointRounding.AwayFromZero)% - @decimal.Round(Model.AdvancedCriteria.MaxSocialHealth.GetValueOrDefault(), 2, MidpointRounding.AwayFromZero)%</td>
            </tr>
        }
        @if (Model.AdvancedCriteria.MinSpecLearnDiff.HasValue)
