@model SFB.Web.UI.Models.BenchmarkChartListViewModel

@if (Model.AdvancedCriteria != null)
{
    <form id="advancedCriteria" method="post" action="~/BenchmarkCriteria/AdvancedCharacteristics">
        
        @Html.Partial("Partials/AdvancedCriteriaHiddenFields", Model.AdvancedCriteria)
        
        <input type="hidden" id="Urn" name="Urn" value="@Model.URN">
        <input type="hidden" id="ComparisonType" name="ComparisonType" value="@Model.ComparisonType">
        <input type="hidden" id="EstType" name="EstType" value="@Model.SearchedEstablishmentType">
        <input type="hidden" id="AreaType" name="AreaType" value="@Model.AreaType">
        <input type="hidden" id="LaCode" name="LaCode" value="@Model.LaCode">
        <input type="hidden" id="ExcludePartial" name="ExcludePartial" value="@Model.ExcludePartial.ToString()">
        
        <span id="criteriaExp">This benchmark was created using the following criteria.</span>
    </form>
}