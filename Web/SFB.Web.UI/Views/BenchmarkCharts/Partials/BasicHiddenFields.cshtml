@model SFB.Web.UI.Models.BenchmarkChartListViewModel

@if (Model != null)
{
    <form id="advancedCriteria" method="post" action="~/BenchmarkCriteria/SimpleCharacteristics">

        <input type="hidden" name="SimpleCriteria.IncludeEal" value="@Model.SimpleCriteria.IncludeEal.GetValueOrDefault().ToString()"/>
        <input type="hidden" name="SimpleCriteria.IncludeFsm" value="@Model.SimpleCriteria.IncludeFsm.GetValueOrDefault().ToString()"/>
        <input type="hidden" name="SimpleCriteria.IncludeLa" value="@Model.SimpleCriteria.IncludeLa.GetValueOrDefault().ToString()"/>
        <input type="hidden" name="SimpleCriteria.IncludeSen" value="@Model.SimpleCriteria.IncludeSen.GetValueOrDefault().ToString()"/>

        <input type="hidden" name="Urn" value="@Model.URN">
        <input type="hidden" name="ComparisonType" value="@Model.ComparisonType">
        <input type="hidden" name="EstType" value="@Model.EstablishmentType">
        <input type="hidden" name="BasketSize" value="@Model.BasketSize">
        
        <span>This benchmark was created using the following criteria.</span>
        <span class="hide-in-print"> You can <button type="submit" class="link-button font-small no-padding hide-in-print">change these</button></span>
</form>
}
