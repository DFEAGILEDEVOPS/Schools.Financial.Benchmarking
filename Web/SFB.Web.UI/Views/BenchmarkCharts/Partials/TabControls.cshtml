@using SFB.Web.Domain.Helpers.Enums
@using SFB.Web.UI.Helpers.Constants
@using SFB.Web.UI.Helpers.Enums

@model SFB.Web.UI.Models.BenchmarkChartListViewModel

<nav class="tabs" role="navigation">
    <ol role="tablist">
        <li id="@RevenueGroupType.Expenditure" class="hide-in-print active" role="tab">
            <a href="javascript: DfE.Views.BenchmarkChartsViewModel.ChangeTab('@RevenueGroupType.Expenditure')">@RevenueGroupNames.EXPENDITURE</a>
        </li>
        <li id="@RevenueGroupType.Income" class="hide-in-print" role="tab">
            <a href="javascript: DfE.Views.BenchmarkChartsViewModel.ChangeTab('@RevenueGroupType.Income')">@RevenueGroupNames.INCOME</a>
        </li>
        <li id="@RevenueGroupType.Balance" class="hide-in-print" role="tab">
            <a href="javascript: DfE.Views.BenchmarkChartsViewModel.ChangeTab('@RevenueGroupType.Balance')">@RevenueGroupNames.BALANCE</a>
        </li>
        @if (Model == null || Model.EstablishmentType != EstablishmentType.MAT)
        {
            <li id="@RevenueGroupType.Workforce" class="hide-in-print" role="tab">
                <a href="javascript: DfE.Views.BenchmarkChartsViewModel.ChangeTab('@RevenueGroupType.Workforce')">@RevenueGroupNames.WORKFORCE</a>
            </li>
        }
        @if (Model.EstablishmentType != EstablishmentType.MAT)
        {
            <li id="@RevenueGroupType.Custom" class="hide-in-print" role="tab">
                <a href="javascript: DfE.Views.BenchmarkChartsViewModel.ChangeTab('@RevenueGroupType.Custom')">@RevenueGroupNames.CUSTOM<span ng-cloak class="font-xsmall"> ({{ctrl.totalSelectCount()}} selected)</span></a>
            </li>
        }
    </ol>
</nav>