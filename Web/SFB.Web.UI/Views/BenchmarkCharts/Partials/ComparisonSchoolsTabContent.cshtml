@model SFB.Web.UI.Models.BenchmarkChartListViewModel

<div id="comparisonSchoolsTabSection" style="display: none">
    <div class="grid-row">
        <div class="column-full">
            <div class="font-xsmall latest-year-message mt-2 mb-2">
                <span>The data below is from the latest year available. For maintained schools this is <span class="bold-xsmall">@Model.LatestTermMaintained</span>, academies from <span class="bold-xsmall">@Model.LatestTermAcademies</span></span>
            </div>
            <table class="tablesorter data-table-js comp-school-table chart-table--mobile-above-view" id="ComparisonSchoolsTable">
                <thead>
                    <tr>
                        <th class="school-column" scope="col">School</th>
                        <th class="numeric" scope="col">Pupils</th>
                        <th class="numeric numeric comp-school-table__phase-col" scope="col">Phase of education</th>
                        <th nowrap class="numeric" scope="col">Ofsted rating</th>
                        <th class="numeric comp-school-table__ks-col th-ks2-js" scope="col">
                            Key stage 2 progress
                            <button class="helpLink link-button no-padding hide-in-print" id="renderKs2Info" onclick="DfE.Util.ModalRenderer.RenderBicCriteriaKs2Modal(event)">
                                <img class="help-image" src="/public/assets/images/help-icon.png" alt="Help">
                            </button>
                        </th>
                        <th class="numeric comp-school-table__ks-col th-p8-js" scope="col">
                            Progress 8
                            <button class="helpLink link-button no-padding hide-in-print" id="renderP8InfoTable" onclick="DfE.Util.ModalRenderer.RenderBicCriteriaP8Modal(event)">
                                <img class="help-image" src="/public/assets/images/help-icon.png" alt="Help">
                            </button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cSchool in Model.ComparisonSchools.OrderByDescending(s => s.ProgressScore))
                    {
                        <tr>
                            <td scope="col" class="school-column">
                                <a href="/school/detail?Urn=@cSchool.Id" onclick="dataLayer.push({ 'event': 'bmc_school_link_click' });" class="@Html.Raw(Model.SchoolComparisonList.HomeSchoolName == cSchool.Name ? "highlight" : "")">
                                    <span>@cSchool.Name</span>
                                </a>
                                @Html.Raw(Model.SchoolComparisonList.HomeSchoolName == cSchool.Name ? "<span class=\"visually-hidden\"> index school</span>" : "")
                                <div>@cSchool.Address</div>
                            </td>
                            <td class="numeric" scope="col">@cSchool.TotalPupils <span class="visually-hidden">pupils</span></td>
                            <td class="numeric" scope="col">@cSchool.OverallPhase <span class="visually-hidden">phase</span></td>
                            <td class="numeric" scope="col">
                                @if (cSchool.OfstedRating != "0")
                                {
                                    <span class="rating rating-@cSchool.OfstedRating">@cSchool.OfstedRating</span>
                                }
                                @cSchool.OfstedRatingText <span class="visually-hidden">ofsted rating</span>
                                @if (cSchool.OfstedRatingText != "Not rated" && cSchool.OfstedInspectionDate != null)
                                {
                                    <br><span class="font-xxsmall not-bold">Inspected @cSchool.OfstedInspectionDate</span>
                                }
                            </td>
                            <td class="numeric no-padding td-ks2-js" scope="col">
                                <div class="score @ViewHelpers.ScoreColorCode(cSchool.KS2ProgressScore, "KS2")">
                                    <div class="font-xsmall">@(cSchool.KS2ProgressScore.HasValue ? cSchool.KS2ProgressScore.GetValueOrDefault().ToString("F2") : "N/A")</div>
                                    @if (cSchool.KS2ProgressScore.HasValue)
                                    {
                                        <div class="no-wrap">@ViewHelpers.ScoreText(cSchool.KS2ProgressScore.GetValueOrDefault(), "KS2")</div>
                                    }
                                    <span class="visually-hidden">Key stage 2 progress score</span>
                                </div>
                            </td>
                            <td class="numeric no-padding td-p8-js" scope="col">
                                <div class="score @ViewHelpers.ScoreColorCode(cSchool.P8ProgressScore, "P8")">
                                    <div class="font-xsmall">@(cSchool.P8ProgressScore.HasValue ? cSchool.P8ProgressScore.GetValueOrDefault().ToString("F2") : "N/A")</div>
                                    @if (cSchool.P8ProgressScore.HasValue)
                                    {
                                        <div class="no-wrap">@ViewHelpers.ScoreText(cSchool.P8ProgressScore.GetValueOrDefault(), "P8")</div>
                                    }
                                    <span class="visually-hidden">Progress 8 score</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <table class="tablesorter data-table-js comp-school-table chart-table--mobile-only-view" id="ComparisonSchoolsTableMobile">
                @foreach (var cSchool in Model.ComparisonSchools.OrderByDescending(s => s.ProgressScore))
                {
                    <tbody class="chart-table--detail-view__body">
                        <tr>
                            <th scope="row" class="col-header">School name</th>
                            <td>
                                <a href="/school/detail?Urn=@cSchool.Id" onclick="dataLayer.push({ 'event': 'bmc_school_link_click' });" class="@Html.Raw(Model.SchoolComparisonList.HomeSchoolName == cSchool.Name ? "highlight" : "")">
                                    <span>@cSchool.Name</span>
                                </a>
                                @Html.Raw(Model.SchoolComparisonList.HomeSchoolName == cSchool.Name ? "<span class=\"visually-hidden\"> index school</span>" : "")
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">Address</th>
                            <td>@cSchool.Address</td>
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">Pupils</th>
                            <td>@cSchool.TotalPupils <span class="visually-hidden">pupils</span></td>                            
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">Phase of education</th>
                            <td>@cSchool.OverallPhase <span class="visually-hidden">phase</span></td>
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">Ofsted rating</th>
                            <td>
                                @if (cSchool.OfstedRating != "0")
                                {
                                    <span class="rating rating-@cSchool.OfstedRating">@cSchool.OfstedRating</span>
                                }
                                @cSchool.OfstedRatingText <span class="visually-hidden">ofsted rating</span>
                                @if (cSchool.OfstedRatingText != "Not rated" && cSchool.OfstedInspectionDate != null)
                                {
                                    <br><span class="font-xxsmall not-bold">Inspected @cSchool.OfstedInspectionDate</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">
                                Key stage 2 progress
                                <button class="helpLink link-button no-padding hide-in-print" id="renderKs2Info" onclick="DfE.Util.ModalRenderer.RenderBicCriteriaKs2Modal(event)">
                                    <img class="help-image" src="/public/assets/images/help-icon.png" alt="Help">
                                </button>
                            </th>
                            <td class="no-padding">
                                <div class="score @ViewHelpers.ScoreColorCode(cSchool.KS2ProgressScore, "KS2")">
                                    <span class="font-xsmall">@(cSchool.KS2ProgressScore.HasValue ? cSchool.KS2ProgressScore.GetValueOrDefault().ToString("F2") : "N/A")</span>
                                    @if (cSchool.KS2ProgressScore.HasValue)
                                    {
                                        <span class="ml-1 font-xxxsmall no-wrap">@ViewHelpers.ScoreText(cSchool.KS2ProgressScore.GetValueOrDefault(), "KS2")</span>
                                    }
                                    <span class="visually-hidden">Key stage 2 progress score</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="col-header">
                                Progress 8
                                <button class="helpLink link-button no-padding hide-in-print" id="renderP8InfoTable" onclick="DfE.Util.ModalRenderer.RenderBicCriteriaP8Modal(event)">
                                    <img class="help-image" src="/public/assets/images/help-icon.png" alt="Help">
                                </button>
                            </th>
                            <td class="no-padding">
                                <div class="score @ViewHelpers.ScoreColorCode(cSchool.P8ProgressScore, "P8")">
                                    <span class="font-xsmall">@(cSchool.P8ProgressScore.HasValue ? cSchool.P8ProgressScore.GetValueOrDefault().ToString("F2") : "N/A")</span>
                                    @if (cSchool.P8ProgressScore.HasValue)
                                    {
                                        <span class="ml-1 font-xxxsmall no-wrap">@ViewHelpers.ScoreText(cSchool.P8ProgressScore.GetValueOrDefault(), "P8")</span>
                                    }
                                    <span class="visually-hidden">Progress 8 score</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>



